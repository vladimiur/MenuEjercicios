<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuEjercicios.NumerosParesPage"
             Title="NumerosParesPage">
    <VerticalStackLayout>

        <!-- Adjuntamos nuestro gif y definimos su ancho y su alto con las propiedades correspondientes -->

                   <Image 
                   Source="pajaritos.gif" 
                   IsAnimationPlaying ="True"                 
                   WidthRequest="200"   
                   HeightRequest="200" />

        <!-- Agregamos dos label con sus propiedades correspondientes -->

        <Label FontSize="30" HorizontalOptions="Center" Padding="10,10,10,10" Text="Bienvenid@"/>

        <Label FontSize="15" HorizontalOptions="Center" Padding="10,10,10,10" Text="Oprima el boton para mostrar los numeros pares del 0 al 100"/>

        <!-- Agregamos un button con su evento click -->

        <Button Margin="10,10,10,10" Text="Mostrar" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>