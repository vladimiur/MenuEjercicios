<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MenuEjercicios.TablaMultiPage"
             Title="TablaMultiPage">
    <VerticalStackLayout>
        <!-- Adjuntamos nuestro gif y definimos su ancho y su alto con las propiedades correspondientes -->

        
                <Image 
                  
                  IsAnimationPlaying ="True"                 
                  WidthRequest="150"                    
                  HeightRequest="150"/>

        <!-- Agregamos dos label con sus propiedades correspondientes -->

        <Label FontSize="30" HorizontalOptions="Center" Padding="10,10,10,10" Text="Bienvenid@"/>

        <Label FontSize="15" HorizontalOptions="Center" Padding="10,10,10,10" Text="Ingrese el numero de la tabla de multiplicar"/>

        <!-- Creamos un Entry para ingresar la tabla de multiplicar -->

        <Entry Keyboard="Numeric" Margin="10,10,10,10" Placeholder="Tabla de multiplicar" x:Name="numero" />

        <!-- Agregamos un button con su evento click -->

        <Button Margin="10,10,10,10" Text="Calcular" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>